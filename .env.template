# AI Agent 3D Print System - Environment Configuration Template
# Copy this file to .env and customize for your deployment

# Application Environment
APP_ENVIRONMENT=production
APP_DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database Configuration
DATABASE_URL=postgresql://ai3dprint:your_secure_password@localhost:5432/ai_3d_print_prod

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
API_KEY=your-secure-api-key-for-authentication

# Hardware Configuration
PRINTER_PORT=/dev/ttyUSB0
SLICER_PATH=/usr/bin/prusa-slicer

# Monitoring and Alerting
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=secure_grafana_password
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Backup Configuration (AWS S3)
BACKUP_S3_BUCKET=ai3dprint-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# SSL/TLS Configuration
SSL_CERT_FILE=/etc/ssl/ai3dprint/ai_3d_print.crt
SSL_KEY_FILE=/etc/ssl/ai3dprint/ai_3d_print.key

# Docker-specific
DB_PASSWORD=secure_database_password
COMPOSE_PROJECT_NAME=ai3dprint
